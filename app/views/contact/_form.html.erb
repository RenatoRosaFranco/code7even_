<%= form_for(contact, {remote: true}) do |f| %>
	
	<%= has_errors?(contact) %>
	
	<div class='field'>
		<div class="col-md-6">
			<%= f.label :name %>
			<div class="input-group">
				<div class="input-group-addon"><i class='glyphicon glyphicon-search'></i></div>
			<%= f.text_field :name, class: 'form-control', required: 'required',
			placeholder: 'Digite o nome', autocomplete:  'off' %>
			</div>
		</div>
	</div>
	<div class="field">
		<div class="col-md-6">
			<%= f.label :phone %>
			<div class="input-group">
				<div class="input-group-addon"><i class="glyphicon glyphicon-search"></i></div>
			<%= f.text_field :phone, class: 'form-control', required: 'required',
			placeholder: 'Digite o telefone', autocomplete: 'off' %>
			</div>
		</div>
	</div>
	<div class="field">
		<div class="col-md-12">
			<%= f.label :email %>
			<div class="input-group">
				<div class="input-group-addon"><i class="glyphicon glyphicon-search"></i></div>
			<%= f.email_field :email, class: 'form-control', required: 'required',
			placeholder: 'Digite o e-mail', autocomplete: 'off' %>
			</div>
		</div>
	</div>
	<div class="field">
		<div class="col-md-12">
			<%= f.label :message %>
			<%= f.text_area :message, class: 'form-control', required: 'required',
			placeholder: 'Digite a mensagem', autocomplete: 'off', style: 'height: 200px;' %>
		</div>
	</div>
	<div class="field">
		<div class="col-md-12"><br>
			<%= f.submit 'Enviar Mensagem', class: 'btn btn-primary btn-lg top' %>
		</div>
	</div>
<% end %>