<%= form_for([:dashboard, @post]) do |f| %>
	
	<%= has_errors?(@post) %>

	<div class="field">
		<%= f.label :title %>
		<div class="input-group">
			<div class="input-group-addon"><i class="glyphicon glyphicon-search"></i></div>
		<%= f.text_field :title, class: 'form-control', required: 'required',
		placeholder: 'Digite o titulo', autocomplete: 'off' %>
		</div>
	</div>
	<div class="field">
		<%= f.label :description %>
		<div class="input-group">
			<div class="input-group-addon"><i class="glyphicon glyphicon-search"></i></div>
		<%= f.text_field :description, class: 'form-control', required: 'required',
		placeholder: 'Digite a descrição', autocomplete:'off' %>
		</div>
	</div>
	<div class="field">
		<%= f.label :content %>
		<%= f.text_area :content, class: 'form-control', required: 'required',
		placeholder: 'Digite o conteudo', autocomplete: 'off' %>
	</div>
	<div class="field">
		<%= f.label :status %>
		<div class="input-group">
			<div class="input-group-addon"><i class='glyphicon glyphicon-search'></i></div>
		<%= f.select(:status, {'Publicado': 0, 'Não publicado': 1}, 
		 {prompt: 'Selecione o estado'}, {class: 'form-control'}) %>
		</div>
	</div>
	<div class="field">
		<%= f.label :tags %>
		<div class='input-group'>
			<div class="input-group-addon"><i class='glyphicon glyphicon-search'></i></div>
		<%= f.text_field :tags, class: 'form-control', required: 'required',
		placeholder: 'Digite as tags', autocomplete: 'off' %>
		</div>
	</div>
	<div class="field">
		<%= f.submit nil, class: 'btn btn-primary btn-lg top' %>
	</div>
<% end %>